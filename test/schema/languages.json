{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"version": "1.0.1",
	"type": "object",

	"properties": {
		"language": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"entries": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					},
					"source": {
						"type": "string"
					},
					"page": {
						"type": "integer"
					},
					"srd": {
						"type": "boolean"
					},
					"typicalSpeakers": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"script": {
						"type": "string"
					},
					"type": {
						"type": "string",
						"enum": ["standard", "exotic", "secret"]
					},
					"additionalSources": {
						"$ref": "util.json#/definitions/additionalSources"
					},
					"dialects": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"fonts": {
						"type": "array",
						"items": {
							"type": "string"
						}
					}
				},
				"required": [
					"name",
					"source",
					"page"
				],
				"additionalProperties": false
			}
		}
	},
	"required": [
		"language"
	],
	"additionalProperties": false
}
