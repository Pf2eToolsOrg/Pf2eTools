				{
					"type": "object",
					"properties": {
						"alignment": {
							"type": "array",
							"items": {
								"$ref": "#/definitions/align"
							}
						},
						"chance": {
							"type": "integer"
						},
						"note": {
							"type": "string"
						}
					},
					"additionalProperties": false,
					"required": ["alignment"]
				},
				{
					"type": "object",
					"properties": {
						"special": {
							"type": "string"
						}
					},
					"additionalProperties": false,
					"required": ["special"]
				}
			]
		},
		"acItem": {
			"oneOf": [
				{
					"type": "object",
					"properties": {
						"ac": {
							"type": "integer"
						},
						"from": {
							"type": "array",
							"items": {
