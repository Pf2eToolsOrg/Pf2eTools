						},
						"braces": {
							"type": "boolean"
						}
					},
					"required": ["ac"],
					"additionalProperties": false
				},
				{
					"type": "object",
					"properties": {
						"special": {
							"type": "string"
						}
					},
					"required": ["special"],
					"additionalProperties": false
				},
				{
					"type": "integer"
				}
			]
		},

