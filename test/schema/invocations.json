{
	"$schema": "http://json-schema.org/draft-06/schema#",
	"version": "1.1.0",
	"title": "Invocations",
	"type": "object",

	"definitions": {
		"prerequisite": {
			"type": "object",
			"properties": {
				"spell": {
					"oneOf": [
						{
							"type": "string",
							"enum": [
								"Eldritch Blast", "Hex/Curse"
							]
						},
						{
							"type": "array",
							"items": {
								"type": "string"
							}
						}
					]
				},
				"pact": {
					"type": "string",
					"enum": [
						"Chain", "Tome", "Blade"
					]
				},
				"patron": {
					"type": "string",
					"enum": [
						"The Archfey", "The Fiend", "The Great Old One", "The Hexblade", "The Raven Queen", "The Seeker", "The Kraken"
					]
				},
				"level": {
					"type": "integer",
					"enum": [5, 7, 9, 12, 15, 18]
				},
				"feature": {
					"type": "string",
					"enum": ["Grip of the Master"]
				},

				"or": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/prerequisite"
					}
				}
			},
			"additionalProperties": false
		},
		"invocation": {
			"properties": {
				"name": {
					"type": "string"
				},
				"prerequisites": {
					"$ref": "#/definitions/prerequisite"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "/Entry"
					}
				},
				"source": {
					"type": "string"
				},
				"page": {
					"type": "integer"
				}
			},
			"required": [
				"name",
				"entries",
				"source"
			],
			"additionalProperties": false
		}
	},

	"properties": {
		"invocation": {
			"type": "array",
			"items": {"$ref": "#/definitions/invocation"}
		}
	},
	"additionalProperties": false
}