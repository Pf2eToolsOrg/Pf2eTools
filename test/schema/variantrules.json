{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"version": "1.1.0",
	"title": "RulesArray",

	"type": "object",
	"properties": {
		"variantrule": {
			"type": "array",
			"items": {"$ref": "#/definitions/variantrule"}
		}
	},
	"additionalProperties": false,
	"required": ["variantrule"],
	"definitions": {
		"variantrule": {
			"properties": {
				"name": {
					"type": "string"
				},
				"type": {
					"type": "string"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"source": {
					"type": "string"
				},
				"page": {
					"type": "integer"
				},
				"ruleType": {
					"description": "Optional, Variant, Variant Optional, Variant Variant",
					"type": "string",
					"enum": ["O", "V", "VO", "VV"]
				},
				"srd": {
					"$ref": "util.json#/definitions/srd"
				},
				"additionalSources": {
					"$ref": "util.json#/definitions/additionalSources"
				}
			},
			"required": [
				"name",
				"entries",
				"source"
			],
			"additionalProperties": false
		}
	}
}
