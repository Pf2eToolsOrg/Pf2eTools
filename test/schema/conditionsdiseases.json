{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"version": "1.1.3",
	"type": "object",
	"definitions": {
		"conditionDisease": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"source": {
					"type": "string"
				},
				"page": {
					"type": "integer"
				},
				"srd": {
					"$ref": "util.json#/definitions/srd"
				},
				"color": {
					"description": "For homebrew use only.",
					"type": "string"
				}
			},
			"required": [
				"name",
				"entries",
				"source",
				"page"
			],
			"additionalProperties": false
		}
	},
	"properties": {
		"condition": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"$ref": "#/definitions/conditionDisease"
			}
		},
		"disease": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"$ref": "#/definitions/conditionDisease"
			}
		},
		"status": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"$ref": "#/definitions/conditionDisease"
			}
		}
	},
	"required": [
		"condition",
		"disease"
	],
	"additionalProperties": false
}
