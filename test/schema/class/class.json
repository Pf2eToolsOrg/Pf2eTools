{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"version": "1.4.1",

	"title": "ClassArray",
	"type": "object",

	"definitions": {
		"classTableGroup": {
			"properties": {
				"title": {
					"type": "string"
				},
				"subclasses": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string"
							},
							"source": {
								"type": "string"
							}
						},
						"required": ["name", "source"],
						"additionalProperties": false
					}
				},
				"colLabels": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"rows": {
					"type": "array",
					"items": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					}
				}
			},
			"required": [
				"colLabels",
				"rows"
			],
			"additionalProperties": false
		},

		"classFeature": {
			"properties": {
				"name": {
					"type": "string"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"gainSubclassFeature": {
					"type": "boolean"
				}
			},
			"required": [
				"name",
				"entries"
			],
			"additionalProperties": false
		},
		"subclassFeature": {
			"properties": {
				"name": {
					"type": "string"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"source": {
					"type": "string"
				}
			},
			"required": [
				"entries"
			],
			"additionalProperties": false
		},

		"proficiencies": {
			"type": "object",
			"properties": {
				"armor": {
					"type": "array",
					"items": {
						"oneOf": [
							{
								"type": "string",
								"enum": [
									"light", "medium", "heavy", "shields"
								]
							},
							{
								"type": "object",
								"properties": {
									"proficiency": {
										"type": "string",
										"enum": [
											"light", "medium", "heavy", "shields", "special"
										]
									},
									"full": {
										"description": "The complete text for this proficiency.",
										"type": "string"
									}
								},
								"required": ["proficiency", "full"]
							}
						]
					}
				},
				"weapons": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"tools": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"skills": {
					"$ref": "util.json#/definitions/skillProficiencies"
				}
			}
		},

		"multiclassing": {
			"type": "object",
			"properties": {
				"requirements": {
					"str": {"type": "int"},
					"dex": {"type": "int"},
					"con": {"type": "int"},
					"int": {"type": "int"},
					"wis": {"type": "int"},
					"cha": {"type": "int"}
				},
				"proficienciesGained": {
					"armor": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"weapons": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"tools": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"skills": {
						"$ref": "util.json#/definitions/skillProficiencies"
					}
				}
			}
		},

		"subclass": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"shortName": {
					"type": "string"
				},
				"isReprinted": {
					"type": "boolean"
				},
				"srd": {
					"type": "boolean"
				},
				"page": {
					"type": "integer"
				},
				"casterProgression": {
					"enum": ["full", "1/2", "1/3", "pact"]
				},
				"spellcastingAbility": {
					"enum": ["str", "dex", "con", "int", "wis", "cha"]
				},
				"subclassFeatures": {
					"type": "array",
					"items": {
						"type": "array",
						"items": {"$ref": "#/definitions/subclassFeature"}
					},
					"maxItems": 20
				},
				"subclassTableGroups": {
					"type": "array",
					"items": { "$ref": "#/definitions/classTableGroup"}
				},
				"source": {
					"type": "string"
				},
				"subclassSpells": {
					"description": "Homebrew use only",
					"type": "array",
					"items": {"$ref": "#/definitions/spellRef"}
				},
				"subSubclassSpells": {
					"description": "Homebrew use only",
					"type": "array",
					"items": {"$ref": "#/definitions/spellRef"}
				},
				"class": {
					"description": "Homebrew use only",
					"type": "string"
				},
				"classSource": {
					"description": "Homebrew use only",
					"type": "string"
				}
			},
			"required": [
				"name",
				"shortName",
				"subclassFeatures",
				"source"
			],
			"additionalProperties": false
		},

		"class": {
			"description" : "A character class",

			"properties": {
				"name": {
					"type": "string"
				},
				"source": {
					"type": "string"
				},
				"srd": {
					"type": "boolean"
				},
				"isReprinted": {
					"type": "boolean"
				},
				"hd": {
					"type": "object",
					"properties": {
						"number": {
							"type": "integer"
						},
						"faces": {
							"type": "integer"
						}
					},
					"required": [
						"number",
						"faces"
					],
					"additionalProperties": false
				},
				"proficiency": {
					"type": "array",
					"items": {
						"type": "string",
						"enum": ["str", "dex", "con", "int", "wis", "cha"]
					}
				},
				"classTableGroups": {
					"type": "array",
					"items": { "$ref": "#/definitions/classTableGroup"}
				},
				"startingProficiencies": {
					"$ref": "#/definitions/proficiencies"
				},
				"startingEquipment": {
					"type": "object",
					"properties": {
						"additionalFromBackground": {
							"type": "boolean"
						},
						"default": {
							"type": "array",
							"items": {
								"type": "string"
							}
						},
						"goldAlternative": {
							"type": "string"
						}
					},
					"required": [
						"additionalFromBackground",
						"default"
					],
					"additionalProperties": false
				},
				"multiclassing": {
					"type": "object",
					"properties": {
						"requirements": {
							"str": {
								"type": "integer"
							},
							"dex": {
								"type": "integer"
							},
							"con": {
								"type": "integer"
							},
							"int": {
								"type": "integer"
							},
							"wis": {
								"type": "integer"
							},
							"cha": {
								"type": "integer"
							},
							"or": {
								"type": "array",
								"items": {
									"type": "object",
									"properties": {
										"str": {
											"type": "integer"
										},
										"dex": {
											"type": "integer"
										},
										"con": {
											"type": "integer"
										},
										"int": {
											"type": "integer"
										},
										"wis": {
											"type": "integer"
										},
										"cha": {
											"type": "integer"
										}
									},
									"additionalProperties": false
								}
							}
						},
						"proficienciesGained": {
							"$ref": "#/definitions/proficiencies"
						}
					},
					"additionalProperties": false
				},
				"casterProgression": {
					"enum": ["full", "1/2", "1/3", "pact"]
				},
				"spellcastingAbility": {
					"enum": ["str", "dex", "con", "int", "wis", "cha"]
				},
				"classFeatures": {
					"type": "array",
					"items": {
						"type": "array",
						"items": {
							"items": {"$ref": "#/definitions/classFeature"}
						}
					},
					"minItems": 20,
					"maxItems": 20
				},
				"subclassTitle": {
					"type": "string"
				},
				"subclasses": {
					"type": "array",
					"items": {"$ref": "#/definitions/subclass"}
				},
				"page": {
					"type": "integer"
				},
				"fluff": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"entries": {
								"type": "array",
								"items": {"$ref": "entry.json"}
							},
							"page": {
								"type": "integer"
							},
							"source": {
								"type": "string"
							},
							"type": {
								"type": "string"
							}
						},
						"required": ["entries", "page", "source"],
						"additionalProperties": false
					}
				},
				"classSpells": {
					"description": "Homebrew use only",
					"type": "array",
					"items": {"$ref": "#/definitions/spellRef"}
				}
			},
			"required": [
				"name",
				"source",
				"classFeatures"
			],
			"additionalProperties": false
		},

		"spellRef": {
			"description": "A reference to a spell, linked by name and source. Assumes PHB as the source, if none is provided.",
			"oneOf": [
				{
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"source": {
							"type": "string"
						}
					},
					"required": [
						"name", "source"
					]
				},
				{
					"type": "string"
				}
			]
		}
	},

	"properties": {
		"class": {
			"type": "array",
			"items": {"$ref": "#/definitions/class"}
		}
	}
}
