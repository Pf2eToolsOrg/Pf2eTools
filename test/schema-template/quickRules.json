{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "quickRules.json",
	"title": "Quick Rules",
	"description": "The quick rule data type for Pf2eTools.",
	"type": "object",
	"version": "0.0.1",
	"properties": {
		"quickRules": {
			"type": "object",
			"propertyNames": {
				"type": "string",
				"enum": [
					"organization",
					"variantRule",
					"background",
					"archetype",
					"feat",
					"companion",
					"familiar",
					"eidolon",
					"hazard",
					"condition",
					"curse",
					"disease",
					"itemcurse",
					"ability",
					"deity",
					"language",
					"ritual",
					"trait",
					"vehicle"
				]
			},
			"additionalProperties": {
				"properties": {
					"source": {
						"type": "string",
						"$ref": "utils.json#/definitions/sourceList"
					},
					"page": {
						"type": "integer"
					},
					"entries": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					}
				},
				"required": [
					"source",
					"page",
					"entries"
				],
				"additionalProperties": false				
			},
			"minProperties": 1
		}
	},
	"additionalProperties": false,
	"required": [
		"quickRules"
	]
}
