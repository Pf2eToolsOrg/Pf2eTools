{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"version": "0.0.1",
	"type": "object",
	"$id": "schema.json",
	"title": "Schema",
	"description": "Schema for Pf2eTools. Should include arrays titled similarly to the main site data, e.g. `spell` or `class`. Requires `_meta` if made as homebrew to function.",
	"properties": {
		"_meta": {
			"$ref": "_meta.json"
		},
		"$schema": {
			"description": "Relative or absolute path to the schema to apply to this document.",
			"type": "string",
			"examples": [
				"../test/schema-template/schema.json",
				"https://raw.githubusercontent.com/Pf2eTools/Pf2eTools.github.io/master/test/schema-template/schema.json"
			]
		},
		"variantrule": {
			"type": "array"
		},
		"table": {
			"type": "array"
		},
		"tableGroup": {
			"type": "array"
		},
		"book": {
			"type": "array"
		},
		"bookData": {
			"type": "array"
		},
		"ancestry": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"heritage": {
						"$ref": "heritages.json#/properties/heritage",
						"required": ["ancestryName", "ancestrySource"]
					}
				}
			}
		},
		"versatileHeritage": {
			"type": "array"
		},
		"background": {
			"$ref": "backgrounds.json#/properties/background"
		},
		"class": {
			"type": "array"
		},
		"subclass": {
			"type": "array"
		},
		"classFeature": {
			"type": "array"
		},
		"subclassFeature": {
			"type": "array"
		},
		"archetype": {
			"type": "array"
		},
		"feat": {
			"$ref": "feats.json#/properties/feat"
		},
		"companion": {
			"type": "array"
		},
		"familiar": {
			"type": "array"
		},
		"adventure": {
			"type": "array"
		},
		"adventureData": {
			"type": "array"
		},
		"hazard": {
			"type": "array"
		},
		"action": {
			"$ref": "actions.json#/properties/action"
		},
		"creature": {
			"type": "array"
		},
		"condition": {
			"type": "array"
		},
		"item": {
			"$ref": "items.json#/properties/item"
		},
		"baseitem": {
			"$ref": "items.json#/properties/item"
		},
		"spell": {
			"$ref": "spells.json#/properties/spell"
		},
		"disease": {
			"$ref": "diseases.json#/properties/disease"
		},
		"curse": {
			"$ref": "diseases.json#/properties/disease"
		},
		"itemcurse": {
			"type": "array"
		},
		"ability": {
			"$ref": "abilities.json#/properties/ability"
		},
		"deity": {
			"$ref": "deities.json#/properties/deity"
		},
		"deityFluff": {
			"$ref": "fluff-deities.json#/properties/deityFluff"
		},
		"language": {
			"$ref": "languages.json#/properties/language"
		},
		"place": {
			"type": "array"
		},
		"ritual": {
			"$ref": "rituals.json#/properties/ritual"
		},
		"vehicle": {
			"type": "array"
		},
		"trait": {
			"$ref": "traits.json#/properties/trait"
		},
		"group": {
			"$ref": "groups.json#/properties/group"
		},
		"domain": {
			"$ref": "domains.json#/properties/domain"
		},
		"organization": {
			"$ref": "organizations.json#/properties/organization"
		},
		"organizationFluff": {
			"$ref": "fluff-organizations.json#/properties/organizationFluff"
		},
		"eidolon": {
			"type": "array"
		},
		"familiarAbility": {
			"type": "array"
		},
		"optionalfeature": {
			"type": "array"
		},
		"data": {
			"$ref": "renderdemo.json#/properties/data"
		}
	},
	"additionalProperties": false
}
