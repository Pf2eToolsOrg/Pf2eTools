{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "archetypes.json",
	"title": "Archetypes",
	"description": "The archetype data type for Pf2eTools.",
	"type": "object",
	"version": "0.0.1",
	"properties": {
		"archetype": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"source": {
						"type": "string",
						"$ref": "utils.json#/definitions/sourceList"
					},
					"page": {
						"type": "integer"
					},
					"entries": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					},
					"dedicationLevel": {
						"type": "integer"
					},
					"extraFeats": {
						"type": "array",
						"items": {
							"type": "string",
							"pattern": "\\d+\\|.+?\\|"
						}
					},
					"miscTags": {
						"type": "array",
						"items": {
							"type": "string",
							"enum": [
								"Multiclass",
								"Class Archetype"
							]
						}
					},
					"traits": {
						"type": "array",
						"items": {
							"type": "string",
							"$ref": "utils.json#/definitions/anyTrait"
						},
						"minItems": 1,
						"uniqueItems": true
					},
					"benefits": {
						"type": "array",
						"items": {
							"type": "string",
							"enum": [
								"Alchemy",
								"Spellcasting",
								"Bounded Spellcasting"
							]
						}
					}
				},
				"additionalProperties": false,
				"required": [
					"source",
					"name",
					"page"
				]
			},
			"uniqueItems": true
		}
	},
	"additionalProperties": false,
	"required": [
		"archetype"
	]
}
