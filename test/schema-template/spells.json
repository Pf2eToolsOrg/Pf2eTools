{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "spells.json",
	"title": "Spells",
	"description": "The spell data type for Pf2eTools.",
	"type": "object",
	"version": "0.0.1",
	"properties": {
		"spell": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"source": {
						"type": "string",
						"$ref": "utils.json#/definitions/sourceList"
					},
					"otherSources": {
						"$ref": "utils.json#/definitions/otherSources"
					},
					"page": {
						"type": "integer"
					},
					"level": {
						"type": "integer",
						"exclusiveMinimum": 0,
						"maximum": 10
					},
					"focus": {
						"type": "boolean"
					},
					"domains": {
						"type": "array",
						"items": {
							"$ref": "utils.json#/definitions/domains"
						},
						"minItems": 1
					},
					"traditions": {
						"type": "array",
						"items": {
							"type": "string",
							"$ref": "utils.json#/definitions/tradition"
						}
					},
					"spellLists": {
						"type": "array",
						"items": {
							"type": "string",
							"enum": [
								"Elemental"
							]
						}
					},
					"traits": {
						"type": "array",
						"items": {
							"type": "string",
							"anyOf": [
								{
									"$comment": "Spell only Traits.",
									"enum": [
										"cantrip",
										"composition",
										"cursebound",
										"hex",
										"litany",
										"consecration",
										"contingency"
									]
								},
								{
									"$ref": "utils.json#/definitions/anyTrait"
								}
							]
						},
						"minItems": 1,
						"uniqueItems": true
					},
					"cast": {
						"type": "object",
						"properties": {
							"number": {
								"type": "integer",
								"inclusiveMinimum": 0
							},
							"unit": {
								"type": "string",
								"enum": [
									"free",
									"reaction",
									"action",
									"round",
									"minute",
									"hour",
									"varies"
								]
							},
							"entry": {
								"type": "string",
								"not": {
									"pattern": "^{@as [123RFrf]}$"
								}
							}
						},
						"additionalProperties": false
					},
					"components": {
						"type": "array",
						"items": [
							{
								"type": "array",
								"items": [
									{
										"type": "string",
										"enum": [
											"F",
											"S",
											"M",
											"V"
										]
									}
								]
							}
						]
					},
					"subclass": {
						"type": "object"
					},
					"cost": {
						"type": "string"
					},
					"area": {
						"type": "object",
						"properties": {
							"types": {
								"type": "array",
								"items": {
									"type": "string",
									"enum": [
										"Emanation",
										"Burst",
										"Cone",
										"Line",
										"Cylinder",
										"Misc."
									]
								}
							},
							"entry": {
								"type": "string"
							}
						},
						"additionalProperties": false,
						"required": [
							"types",
							"entry"
						]
					},
					"requirements": {
						"type": "string"
					},
					"trigger": {
						"type": "string"
					},
					"range": {
						"type": "object",
						"properties": {
							"entry": {
								"type": "string"
							},
							"type": {
								"type": "string",
								"enum": [
									"touch",
									"feet",
									"mile",
									"planetary",
									"interplanar",
									"unlimited",
									"unknown"
								]
							},
							"number": {
								"type": "integer",
								"inclusiveMinimum": 0
							}
						},
						"required": [
							"type"
						],
						"additionalProperties": false
					},
					"targets": {
						"type": "string"
					},
					"savingThrow": {
						"type": "object",
						"properties": {
							"basic": {
								"type": "boolean"
							},
							"type": {
								"type": "array",
								"items": {
									"enum": [
										"F",
										"R",
										"W"
									]
								}
							},
							"hidden": {
								"type": "boolean",
								"enum": [
									true
								]
							}
						},
						"additionalProperties": false,
						"required": [
							"type"
						]
					},
					"duration": {
						"type": "object",
						"properties": {
							"type": {
								"type": "string",
								"enum": [
									"timed"
								]
							},
							"entry": {
								"type": "string"
							},
							"sustain": {
								"type": "boolean"
							},
							"dismiss": {
								"type": "boolean"
							},
							"duration": {
								"type": "object",
								"properties": {
									"number": {
										"type": "integer",
										"exclusiveMinimum": 0
									},
									"unit": {
										"type": "string",
										"enum": [
											"reaction",
											"action",
											"turn",
											"round",
											"minute",
											"hour",
											"day",
											"month",
											"unlimited",
											"special"
										]
									}
								},
								"additionalProperties": false
							}
						},
						"additionalProperties": false
					},
					"miscTags": {
						"type": "array",
						"description": "THP - Grants Temporary Hit Points\nSM - Summoning Spell\nBF - Has Battle Form",
						"items": {
							"type": "string",
							"enum": [
								"THP",
								"SM",
								"BF"
							]
						}
					},
					"entries": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					},
					"heightened": {
						"type": "object",
						"properties": {
							"X": {
								"type": "object"
							},
							"plusX": {
								"type": "object"
							}
						},
						"additionalProperties": false
					}
				},
				"required": [
					"name",
					"source",
					"entries"
				],
				"additionalProperties": false
			},
			"uniqueItems": true
		}
	},
	"required": [
		"spell"
	],
	"additionalProperties": false
}
