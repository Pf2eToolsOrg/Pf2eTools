{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "diseases.json",
	"title": "Diseases",
	"description": "The disease data type for Pf2eTools.",
	"type": "object",
	"version": "0.0.1",
	"properties": {
		"disease": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"source": {
						"type": "string",
						"$ref": "utils.json#/definitions/sourceList"
					},
					"name": {
						"type": "string"
					},
					"page": {
						"type": "integer"
					},
					"type": {
						"type": "string",
						"enum": [
							"Disease",
							"Curse"
						]
					},
					"level": {
						"oneOf": [
							{
								"const": "Level Varies"
							},
							{
								"type": "integer",
								"minimum": 0
							}
						]
					},
					"traits": {
						"type": "array",
						"items": {
							"type": "string",
							"anyOf": [
								{
									"$ref": "utils.json#/definitions/tradition"
								},
								{
									"$ref": "utils.json#/definitions/school"
								},
								{
									"$ref": "utils.json#/definitions/effectName"
								},
								{
									"$ref": "utils.json#/definitions/anyTrait"
								}
							]
						}
					},
					"entries": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						},
						"contains": {
							"$ref": "entry.json#/definitions/entriesAffliction",
							"$comment": "This should really be a standalone part of diseases.json and not tucked in the entries."
						}
					}
				},
				"additionalProperties": false,
				"required": [
					"source",
					"name",
					"type",
					"entries",
					"page"
				]
			},
			"uniqueItems": true,
			"minItems": 1
		}
	},
	"additionalProperties": false,
	"required": [
		"disease"
	]
}
