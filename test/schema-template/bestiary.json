{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "bestiary.json",
	"title": "Creatures",
	"description": "The creature data type for Pf2eTools.",
	"type": "object",
	"version": "0.0.1",
	"properties": {
		"creature": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"source": {
						"type": "string",
						"$ref": "utils.json#/definitions/sourceList"
					},
					"otherSources": {
						"$ref": "utils.json#/definitions/otherSources"
					},
					"foundIn": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"name": {
						"type": "string"
					},
					"alias": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"page": {
						"type": "integer",
						"exclusiveMinimum": 0
					},
					"hasImages": {
						"const": true
					},
					"isNpc": {
						"const": true
					},
					"_copy": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string"
							},
							"source": {
								"type": "string"
							},
							"creatureAdjustment": {
								"description": "Apply weak/elite adjustement to creature data as part of copy",
								"type": "string",
								"enum": [
									"Weak",
									"Elite"
								]
							},
							"_mod": {
								"$ref": "utils.json#/definitions/_modObject"
							},
							"_preserve": {
								"type": "object",
								"patternProperties": {
									".*": {
										"type": "boolean"
									}
								}
							}
						},
						"required": [
							"name",
							"source"
						],
						"additionalProperties": false
					},
					"level": {
						"type": "integer",
						"minimum": -1
					},
					"rarity": {
						"$ref": "utils.json#/definitions/rarity"
					},
					"alignment": {
						"$ref": "utils.json#/definitions/alignmentTags"
					},
					"size": {
						"$ref": "utils.json#/definitions/size"
					},
					"traits": {
						"type": "array",
						"items": {
							"type": "string",
							"$ref": "utils.json#/definitions/anyTrait"
						},
						"minItems": 1,
						"uniqueItems": true
					},
					"description": {
						"type": "string"
					},
					"perception": {
						"type": "object",
						"properties": {
							"std": {
								"type": "integer"
							}
						},
						"additionalProperties": false,
						"minProperties": 1
					},
					"languages": {
						"type": "object",
						"properties": {
							"languages": {
								"type": "array",
								"items": {
									"$ref": "utils.json#/definitions/languages"
								},
								"minItems": 1,
								"uniqueItems": true
							},
							"notes": {
								"type": "array",
								"items": {
									"type": "string"
								},
								"minItems": 1,
								"uniqueItems": true
							},
							"abilities": {
								"type": "array",
								"items": {
									"type": "string"
								},
								"minItems": 1,
								"uniqueItems": true
							}
						},
						"additionalProperties": false,
						"minProperties": 1
					},
					"skills": {
						"type": "object",
						"propertyNames": {
							"oneOf": [
								{
									"$ref": "utils.json#/definitions/skillName"
								},
								{
									"type": "string",
									"pattern": "([a-z]+ |)lore( \\(.+?\\)|)$"
								},
								{
									"const": "notes"
								}
							]
						},
						"properties": {
							"notes": {
								"type": "array",
								"items": {
									"type": "string"
								},
								"uniqueItems": true,
								"minItems": 1
							}
						},
						"additionalProperties": {
							"type": "object",
							"properties": {
								"default": {
									"type": "integer",
									"minimum": 1
								},
								"note": {
									"type": "string"
								}
							},
							"additionalProperties": {
								"type": "integer"
							},
							"minProperties": 1
						}
					},
					"senses": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"name": {
									"type": "string"
								},
								"type": {
									"type": "string",
									"enum": [
										"precise",
										"imprecise",
										"vague",
										"other"
									]
								},
								"range": {
									"type": "integer"
								}
							},
							"minProperties": 1
						}
					},
					"abilityMods": {
						"$ref": "utils.json#/definitions/abilityMods"
					},
					"items": {
						"type": "array",
						"items": {
							"type": "string"
						},
						"minItems": 1
					},
					"defenses": {
						"$ref": "utils.json#/definitions/defenses"
					},
					"speed": {
						"$ref": "utils.json#/definitions/speed"
					},
					"attacks": {
						"type": "array",
						"items": {
							"$ref": "utils.json#/definitions/attackBlock"
						},
						"uniqueItems": true,
						"minItems": 1
					},
					"abilities": {
						"type": "object",
						"properties": {
							"top": {
								"type": "array",
								"items": {
									"$ref": "utils.json#/definitions/abilityBlock"
								},
								"uniqueItems": true,
								"minItems": 1
							},
							"mid": {
								"type": "array",
								"items": {
									"$ref": "utils.json#/definitions/abilityBlock"
								},
								"uniqueItems": true,
								"minItems": 1
							},
							"bot": {
								"type": "array",
								"items": {
									"$ref": "utils.json#/definitions/abilityBlock"
								},
								"uniqueItems": true,
								"minItems": 1
							}
						},
						"uniqueItems": true,
						"minItems": 1
					},
					"inflicts": {
						"type": "object",
						"properties": {
							"damage": {
								"type": "array",
								"items": {
									"$ref": "utils.json#/definitions/damageType"
								},
								"minItems": 1,
								"uniqueItems": true
							},
							"condition": {
								"type": "array",
								"items": {
									"$ref": "utils.json#/definitions/conditions"
								},
								"minItems": 1,
								"uniqueItems": true
							}
						},
						"additionalProperties": false,
						"minProperties": 1
					},
					"spellcasting": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"name": {
									"type": "string"
								},
								"type": {
									"type": "string",
									"enum": [
										"Innate",
										"Prepared",
										"Spontaneous",
										"Focus"
									]
								},
								"note": {
									"type": "string"
								},
								"fp": {
									"type": "integer"
								},
								"tradition": {
									"$ref": "utils.json#/definitions/tradition"
								},
								"attack": {
									"type": "integer",
									"minimum": 0
								},
								"DC": {
									"type": "integer",
									"minimum": 10
								},
								"entry": {
									"type": "object",
									"patternProperties": {
										"^([0-9]|10)$": {
											"$ref": "utils.json#/definitions/spellsByLevelBlock"
										},
										"constant": {
											"type": "object",
											"patternProperties": {
												"^([0-9]|10)$": {
													"$ref": "utils.json#/definitions/spellsByLevelBlock"
												}
											},
											"additionalProperties": false,
											"minProperties": 1
										}
									},
									"additionalProperties": false,
									"minProperties": 1
								},
								"footer": {
									"type": "string",
									"minLength": 1,
									"description": "Footer text (intended to be used with the `starred` property in the spell list)."
								}
							},
							"additionalProperties": false,
							"required": [
								"type",
								"DC",
								"entry"
							]
						},
						"minItems": 1,
						"uniqueItems": true
					},
					"rituals": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"name": {
									"type": "string"
								},
								"tradition": {
									"$ref": "utils.json#/definitions/tradition"
								},
								"DC": {
									"type": "integer",
									"minimum": 10
								},
								"rituals": {
									"type": "array",
									"items": {
										"type": "object",
										"properties": {
											"name": {
												"type": "string"
											},
											"source": {
												"type": "string",
												"$ref": "utils.json#/definitions/sourceList"
											},
											"notes": {
												"type": "array",
												"items": {
													"type": "string"
												}
											}
										},
										"additionalProperties": false,
										"required": [
											"name"
										]
									},
									"minItems": 1
								}
							},
							"additionalProperties": false,
							"required": [
								"rituals"
							]
						},
						"minItems": 1,
						"uniqueItems": true
					},
					"entries": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						},
						"minItems": 1
					}
				},
				"additionalProperties": false,
				"required": [
					"source",
					"name",
					"page"
				]
			},
			"uniqueItems": true,
			"minItems": 1
		}
	},
	"additionalProperties": false,
	"required": [
		"creature"
	]
}
