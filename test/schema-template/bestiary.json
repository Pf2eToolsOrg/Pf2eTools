{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "bestiary.json",
	"title": "Creatures",
	"description": "The creature data type for Pf2eTools.",
	"type": "object",
	"version": "0.0.1",
	"properties": {
		"creature": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"source": {
						"type": "string",
						"$ref": "utils.json#/definitions/sourceList"
					},
					"name": {
						"type": "string"
					},
					"page": {
						"type": "integer"
					},
					"isNpc": {
						"type": "boolean"
					},
					"level": {
						"type": "integer",
						"minimum": -1
					},
					"rarity": {
						"$ref": "utils.json#/definitions/rarity"
					},
					"alignment": {
						"$ref": "utils.json#/definitions/alignmentTags"
					},
					"size": {
						"$ref": "utils.json#/definitions/size"
					},
					"traits": {
						"type": "array",
						"items": {
							"type": "string",
							"$ref": "utils.json#/definitions/anyTrait"
						},
						"minItems": 1,
						"uniqueItems": true
					},
					"perception": {
						"type": "object",
						"properties": {
							"std": {
								"type": "integer"
							}
						},
						"additionalProperties": false,
						"minProperties": 1
					},
					"languages": {
						"type": "object",
						"properties": {
							"languages": {
								"type": "array",
								"items": {
									"$ref": "utils.json#/definitions/languages"
								},
								"minItems": 1,
								"uniqueItems": true
							},
							"abilities": {
								"type": "array",
								"items": {
									"type": "string",
									"enum": [
										"//TODO"
									]
								},
								"minItems": 1,
								"uniqueItems": true
							}
						},
						"additionalProperties": false,
						"minProperties": 1
					},
					"skills": {
						"type": "object",
						"propertyNames": {
							"oneOf": [
								{
									"$ref": "utils.json#/definitions/skillName"
								},
								{
									"type": "string",
									"pattern": "([a-z]+ |)lore( \\(.+?\\)|)$"
								}
							]
						},
						"additionalProperties": {
							"type": "object",
							"properties": {
								"default": {
									"type": "integer",
									"minimum": 1
								}
							},
							"additionalProperties": {
								"type": "integer"
							},
							"minProperties": 1
						}
					},
					"senses": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"name": {
									"type": "string"
								},
								"type": {
									"type": "string",
									"enum": [
										"precise",
										"imprecise",
										"vague",
										"other"
									]
								},
								"range": {
									"type": "integer"
								}
							},
							"minProperties": 1
						}
					},
					"abilityMods": {
						"$ref": "utils.json#/definitions/abilityMods"
					},
					"items": {
						"type": "array",
						"items": {
							"type": "string"
						},
						"minItems": 1
					},
					"defenses": {
						"$ref": "utils.json#/definitions/defenses"
					},
					"speed": {
						"$ref": "utils.json#/definitions/speed"
					},
					"attacks": {
						"type": "array",
						"items": {
							"$ref": "utils.json#/definitions/attackBlock"
						},
						"uniqueItems": true,
						"minItems": 1
					},
					"abilities": {
						"type": "object",
						"properties": {
							"top": {
								"type": "array",
								"items": {
									"$ref": "utils.json#/definitions/abilityBlock"
								},
								"uniqueItems": true,
								"minItems": 1
							},
							"mid": {
								"type": "array",
								"items": {
									"$ref": "utils.json#/definitions/abilityBlock"
								},
								"uniqueItems": true,
								"minItems": 1
							},
							"bot": {
								"type": "array",
								"items": {
									"$ref": "utils.json#/definitions/abilityBlock"
								},
								"uniqueItems": true,
								"minItems": 1
							}
						},
						"uniqueItems": true,
						"minItems": 1
					},
					"inflicts": {
						"type": "object",
						"properties": {
							"damage": {
								"type": "array",
								"items": {
									"$ref": "utils.json#/definitions/damageType"
								},
								"minItems": 1,
								"uniqueItems": true
							},
							"condition": {
								"type": "array",
								"items": {
									"$ref": "utils.json#/definitions/conditions"
								},
								"minItems": 1,
								"uniqueItems": true
							}
						},
						"additionalProperties": false,
						"minProperties": 1
					},
					"misc": {
						"type": "array",
						"items": {
							"type": "string",
							"enum": [
								"MA",
								"RA",
								"UW",
								"CC",
								"TA"
							]
						},
						"minItems": 1,
						"uniqueItems": true
					},
					"spellcasting": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"name": {
									"type": "string"
								},
								"type": {
									"type": "string",
									"enum": [
										"Innate",
										"Prepared"
									]
								},
								"tradition": {
									"$ref": "utils.json#/definitions/tradition"
								},
								"attack": {
									"type": "integer",
									"minimum": 10
								},
								"DC": {
									"type": "integer",
									"minimum": 10
								},
								"entry": {
									"type": "object",
									"patternProperties": {
										"^[0-9]$": {
											"type": "object",
											"properties": {
												"level": {
													"type": "integer",
													"minimum": 1
												},
												"spells": {
													"type": "array",
													"items": {
														"type": "object",
														"properties": {
															"name": {
																"type": "string"
															},
															"source": {
																"type": "string",
																"$ref": "utils.json#/definitions/sourceList"
															},
															"amount": {
																"type": "integer",
																"minimum": 2
															},
															"note": {
																"type": "string"
															}
														},
														"additionalProperties": false,
														"required": [
															"name"
														]
													},
													"minItems": 1,
													"uniqueItems": true
												}
											},
											"additionalProperties": false,
											"required": [
												"spells"
											]
										}
									},
									"additionalProperties": false,
									"minProperties": 1
								}
							},
							"additionalProperties": false,
							"required": [
								"name",
								"type",
								"tradition",
								"DC",
								"entry"
							]
						},
						"minItems": 1,
						"uniqueItems": true
					},
					"entries": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						},
						"minItems": 1
					}
				},
				"additionalProperties": false,
				"required": [
					"source",
					"name",
					"page"
				]
			},
			"uniqueItems": true,
			"minItems": 1
		}
	},
	"additionalProperties": false,
	"required": [
		"creature"
	]
}
